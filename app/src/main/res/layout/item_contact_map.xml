<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_white_rounded"
    android:padding="12dp">

    <!-- Avatar Inisial (Bulat) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/outer_space"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_initial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="D"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Nama & Nomor (Status) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAlertContact"
        app:layout_constraintStart_toEndOf="@id/card_avatar"
        app:layout_constraintTop_toTopOf="parent">

        <!-- ID DIPERBAIKI: tvContactName -->
        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dad"
            android:textColor="@color/outer_space"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- ID DIPERBAIKI: tvContactStatus -->
        <TextView
            android:id="@+id/tvContactStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+62XXXXXXXX"
            android:textColor="@color/dark_electric_blue"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Icon Chat/Alert -->
    <!-- ID DIPERBAIKI: btnAlertContact -->
    <ImageView
        android:id="@+id/btnAlertContact"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_nav_contacts"
        app:tint="@color/outer_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_track"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Icon Shield/Track -->
    <ImageView
        android:id="@+id/btn_track"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_nav_safety"
        app:tint="@color/outer_space"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>