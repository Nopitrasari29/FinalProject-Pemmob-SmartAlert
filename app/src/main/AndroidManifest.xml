<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin yang dibutuhkan aplikasi -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Izin untuk mengirim SMS (akan dibutuhkan oleh Output Engineer) -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- Izin untuk merekam audio (jika fitur Speech-to-Text diimplementasikan) -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <application
        android:name=".ContactsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fppemmobsmartalertapp"
        tools:targetApi="31">

        <!--
         Metadata untuk Google Maps API Key.
         PENTING: Ganti "MASUKKAN_API_KEY_ANDA_DISINI" dengan API Key yang valid.
         -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="MASUKKAN_API_KEY_ANDA_DISINI" />

        <!--
         Mendefinisikan MainActivity sebagai layar utama (entry point) aplikasi.
         -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
         (Jika ada Activity lain seperti SettingsActivity, daftarkan juga di sini)
         Contoh:
         <activity android:name=".SettingsActivity" />
         -->
    </application>

</manifest>